<Window x:Class="PSControl.FieldDLG"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FieldDLG" Height="500" Width="500"
        WindowStartupLocation="CenterOwner" MinWidth="500" MinHeight="500" MaxWidth="500" MaxHeight="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" VerticalContentAlignment="Center" Content="Set all informations of Fields."/>

        <ListBox x:Name="FieldList"  Grid.Row="1" >
        </ListBox>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="2" Margin="5">
            <Button Content="Yes" Click="Yes_button" Width="48" Margin="10,0" Background="White" IsDefault="True"/>
            <Button Content="Cancel" Margin="10,0" Width="48" Background="White" IsCancel="True"/>
        </StackPanel>

    </Grid>
</Window>
