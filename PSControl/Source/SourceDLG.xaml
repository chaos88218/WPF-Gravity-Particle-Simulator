<Window x:Class="PSControl.SourceDLG"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SourceDLG" Height="500" Width="550"
        WindowStartupLocation="CenterOwner" MinWidth="550" MinHeight="500" MaxWidth="550" MaxHeight="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" VerticalContentAlignment="Center" Content="Set all informations of sources."/>
        
        <ListBox x:Name="SourceList"  Grid.Row="1">
        </ListBox>
        
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="2" Margin="5">
            <Button Content="Yes" Click="Yes_button" Width="48" Margin="10,0" Background="White" IsDefault="True"/>
            <Button Content="Cancel" Margin="10,0" Width="48" Background="White" IsCancel="True"/>
        </StackPanel>
        
    </Grid>
</Window>
